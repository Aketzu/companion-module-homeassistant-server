{
	"name": "homeassistant-server",
	"version": "0.3.0",
	"api_version": "1.0.0",
	"description": "Home Assistant Server",
	"keywords": [
		"Generic"
	],
	"manufacturer": "Home Assistant",
	"product": "Server",
	"shortname": "homeassistant-server",
	"homepage": "https://github.com/bitfocus/companion-module-homeassistant-server#readme",
	"main": "dist/index.js",
	"scripts": {
		"build": "trash dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint": "eslint . --ext .ts",
		"postinstall": "yarn build"
	},
	"author": "Julian Waller <git@julusian.co.uk>",
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,css,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"dependencies": {
		"home-assistant-js-websocket": "^4.5.0",
		"ws": "^7.3.1"
	},
	"devDependencies": {
		"@types/node": "^12.19.3",
		"@types/ws": "^7.2.9",
		"@typescript-eslint/eslint-plugin": "~2.31.0",
		"@typescript-eslint/parser": "~2.31.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.3",
		"husky": "^3.0.5",
		"lint-staged": "^9.2.5",
		"prettier": "^1.17.1",
		"trash-cli": "^3.0.0",
		"typescript": "^4.0.5"
	},
	"resolutions": {
		"eslint/inquirer": "~7.2.0"
	}
}
