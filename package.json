{
	"name": "homeassistant-server",
	"version": "0.4.0",
	"api_version": "1.0.0",
	"description": "Home Assistant Server",
	"keywords": [
		"Generic"
	],
	"manufacturer": "Home Assistant",
	"product": "Server",
	"shortname": "homeassistant-server",
	"homepage": "https://github.com/bitfocus/companion-module-homeassistant-server#readme",
	"main": "dist/index.js",
	"scripts": {
		"build": "npx rimraf dist && npx typescript@~4.0.5 -p tsconfig.build.json",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint": "eslint . --ext .ts --ext .js --ignore-pattern dist",
		"lint-fix": "yarn lint --fix",
		"license-validate": "yarn sofie-licensecheck",
		"postinstall": "yarn build"
	},
	"author": "Julian Waller <git@julusian.co.uk>",
	"license": "MIT",
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint-fix"
		]
	},
	"engines": {
		"node": "^12.14 || 14"
	},
	"dependencies": {
		"@types/node": "^12.19.3",
		"@types/ws": "^7.2.9",
		"home-assistant-js-websocket": "^5.7.0",
		"ws": "^7.3.1"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "^0.2.5",
		"rimraf": "^3.0.2",
		"typescript": "~4.0.5"
	}
}
